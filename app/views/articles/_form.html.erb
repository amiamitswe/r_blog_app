

<%= render "shared/errors", obj: @article %>

<%= form_with(model: @article, local: true, data: { turbo: false }) do |f| %>
  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>
  <br>
  <div>
    <%= f.label :count %> <br>
    <%= f.number_field :count %>
  </div>
  <br>
  <div>
    <%= f.label :idActive, "Is Active" %>
    <%= f.check_box :isActive %>
  </div>
  <br>
  <div>
    <%= f.submit class: "login-btn w-full mt-3" %>
  </div>
<% end %>
<br>
<%= link_to "All Articles", articles_url %>