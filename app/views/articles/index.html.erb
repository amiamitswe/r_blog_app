<h1>All Articles will be here</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Is Active</th>
    <th>Actions</th>
  </tr>

  <% @all_articles.each  do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= article.isActive %></td>
      <td>
        <%= link_to "Delete", article_path(article), data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %>
      </td>
    </tr>
  <% end %>


</table>

