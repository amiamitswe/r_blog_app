<h1>Create new Article</h1>

<%= @article.errors %>

<% if @article.errors.any? %>
  <h2>Error on saving</h2>
  <ul>
    <% @article.errors.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>
  <br>
  <div>
    <%= f.label :count %> <br>
    <%= f.number_field :count %>
  </div>
  <br>
  <div>
    <%= f.label :idActive, "Is Active" %>
    <%= f.check_box :isActive %>
  </div>
  <br>
  <div>
    <%= f.submit "Save data" %>
  </div>
<% end %>