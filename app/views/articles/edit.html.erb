<h1>Edit Article</h1>

<% if @article.errors.any? %>
  <h2>Error on saving</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @article, local: true, data: { turbo: false })  do |f| %>
  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>
  <br>
  <div>
    <%= f.label :count %> <br>
    <%= f.number_field :count %>
  </div>
  <br>
  <div>
    <%= f.label :idActive, "Is Active" %>
    <%= f.check_box :isActive %>
  </div>
  <br>
  <div>
    <%= f.submit "Update Article" %>
  </div>
<% end %>
<br>
<%= link_to "All Articles", articles_url %>