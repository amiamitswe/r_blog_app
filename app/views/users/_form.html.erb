
<%= render "shared/errors", obj: @user %>
<div class='container-div'>
  <%= form_with(model: @user, local: true, data: { turbo: false }) do |f| %>
    <div>
      <%= f.label :username %> <br>
      <%= f.text_field :username, placeholder: "Enter a username" %>
    </div>

    <div>
      <%= f.label :emial %> <br>
      <%= f.email_field :email, placeholder: "Enter a email address" %>
    </div>
 
    <div>
      <%= f.label :password %> <br>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>

    <div>
      <%= f.submit(@user.new_record? ? "Sighn Up" : "Update account", class: "login-btn w-full mt-3") %>
    </div>
  <% end %>
</div>
